<h2>Lista prezentów:</h2>
<ul>
    {{#each giftsList}}
        <li>
            {{this.name}} ({{this.amount}} szt.) 
        </li>
    {{/each}}
</ul>

<h2>Dodaj nowy prezent</h2>
<form action="/gift" method="POST">
    <label>
        Nazwa:
        <input name="name" type="text">
    </label>
        <label>
        Ilość [szt.]:
        <input name="amount" type="number">
    </label>
    <button>Dodaj</button>
</form>